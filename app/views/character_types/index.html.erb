<p id="notice"><%= notice %></p>

<h1>Listing Character Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_types.each do |character_type| %>
      <tr>
        <td><%= character_type.name %></td>
        <td><%= link_to 'Show', character_type %></td>
        <td><%= link_to 'Edit', edit_character_type_path(character_type) %></td>
        <td><%= link_to 'Destroy', character_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

